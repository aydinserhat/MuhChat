<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragment.UserProfile">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/profile_image"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:layout_marginTop="15dp"
                android:src="@color/black"
                app:civ_border_color="#000000"
                android:layout_marginBottom="10dp"
                app:civ_border_width="2dp" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="7dp"
                android:layout_marginTop="7dp"
                android:text="İsim"
                android:textSize="20sp"
                android:gravity="center"
                android:id="@+id/userProfileNameText"
                android:textColor="#4b0082"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="60dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="100dp"
                    android:id="@+id/userProfileMesajicon"
                    android:layout_weight="2"
                    android:background="@drawable/sendmesaj" />


                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="60dp"
                    android:layout_marginLeft="95dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="10dp"
                    android:id="@+id/userProfileAddFriendİcon"
                    android:layout_weight="2" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="35dp"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="3"
                    android:text="Mesaj Gönder"
                    android:id="@+id/userProfileMesageİstegi"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="14dp"
                    android:layout_height="35dp"
                    android:layout_marginLeft="180dp"
                    android:layout_weight="3"
                    android:text="Arkadaş İsteği"
                    android:id="@+id/userProfileArkadasİstegi"
                    android:textSize="12sp"
                    android:textStyle="bold" />
            </LinearLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#000">

            </View>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="15dp"
                    android:text="Genel Bilgiler"
                    android:textColor="#610f8a"
                    android:textSize="20dp"
                    android:textStyle="bold" />



                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="7dp"
                    android:layout_marginTop="15dp"
                    android:text="Bölüm"
                    android:id="@+id/userProfileBolum"
                    android:textColor="#4b0082"
                    android:textStyle="bold"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="7dp"
                    android:layout_marginTop="15dp"
                    android:text="Okul Numarası"
                    android:id="@+id/userProfileOkulNumarası"
                    android:textColor="#4b0082"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="7dp"
                    android:layout_marginTop="15dp"
                    android:text="Sınıf"
                    android:id="@+id/userProfileSınıf"
                    android:textColor="#4b0082"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="7dp"
                    android:layout_marginTop="15dp"
                    android:text="Hakkında"
                    android:id="@+id/userProfileHakkında"
                    android:textColor="#4b0082"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="7dp"
                    android:layout_marginTop="15dp"
                    android:text="Cinsiyet"
                    android:id="@+id/userProfileCinsiyet"
                    android:textColor="#4b0082"
                    android:textStyle="bold" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="10dp"
                android:background="#000">

            </View>


        </LinearLayout>


</LinearLayout>