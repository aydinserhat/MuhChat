<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#bdbebd"
    android:orientation="vertical"
    tools:context=".Activity.KayitOlActivity"
    tools:ignore="MissingClass">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardElevation="20dp"
        android:layout_gravity="center"
        android:layout_margin="7dp"
        app:cardCornerRadius="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="25dp"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="20dp"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:text="BEU Mühendislik Fakültesi"
                android:textStyle="bold"
                android:layout_marginBottom="10dp"/>

            <ImageView
                android:id="@+id/myImageView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="35dp"
                android:src="@drawable/beulogo"/>


            <EditText
                android:id="@+id/input_kullaniciadi"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginBottom="25dp"
                android:hint="Kullanıcı Adı" />


            <EditText
                android:id="@+id/input_password"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:hint="Parola"
                app:endIconMode="password_toggle"
                android:inputType="textPassword" />
            <TextView
                android:id="@+id/hesapvar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_gravity="center"
                android:textSize="13dp"
                android:text="Hesabım Var"
                android:textColor="#000000"/>

            <Button
                android:id="@+id/registerButon"
                android:layout_width="wrap_content"
                android:layout_marginTop="30dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textColor="#f9f6f6"
                android:background="#483248"
                android:text="Kayıt Ol"
                android:textSize="15sp"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>


</LinearLayout>